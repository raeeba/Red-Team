RewriteEngine On

# Rule for just /controller ( /office)
RewriteRule "^([a-zA-Z]+)/?$" "index.php?controller=$1&action=defaultView" [L]

# Rule for /controller/action ( /office/OfficeView)
RewriteRule "^([a-zA-Z]+)/([a-zA-Z]+)/?$" "index.php?controller=$1&action=$2" [L]

# Rule for /controller/action/id ( /office/view/123)
RewriteRule "^([a-zA-Z]+)/([a-zA-Z]+)/([a-zA-Z0-9_]+)/?$" "index.php?controller=$1&action=$2&id=$3" [L]
